{
  "compilerOptions": {
    "experimentalDecorators": true,
    /* Basic Options */
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "react",

    /* Strict Type-Checking Options */
    "strict": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "baseUrl": "./src",
    "types": [
      "node"
    ],
    "esModuleInterop": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.spec.ts"
  ],
  "compileOnSave": false
}
